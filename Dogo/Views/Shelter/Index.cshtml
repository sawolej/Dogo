@model IEnumerable<Shelter>

    @{
        ViewData["Title"] = "List of Schelters";
    }

    <div class="row">
        <div class="col-md-8 offset-md-2">

            <table class="table">
                <thread>
                    <tr class="text-center">
                        <th>@Html.DisplayNameFor(model=>model.ImageURL)</th>
                    <th>@Html.DisplayNameFor(model=>model.Name)</th>
                    <th>@Html.DisplayNameFor(model=>model.Location)</th>
                    @*<th>@Html.DisplayNameFor(model=>model.Decsription)</th>*@
                    <th>Actions</th>
                    </tr>
                </thread>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ImageURL" alt="@item.Name" style="max-width: 150px"/>
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem=>item.Decsription)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-controller="shelter" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a class="btn btn-outline-info" asp-controller="shelter" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a>
                            <a class="btn btn-danger text-white" asp-controller="shelter" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
            </table>

        </div>
</div>
<div style="position:fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-action="Create" class="btn btn-success">
        <i class="="bi bi-plus-circle"></i>" Add New</a>

</div>